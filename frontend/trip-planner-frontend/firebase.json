{
    "hosting": {
      "public": "dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "/api/**",
          "run": {
            "serviceId": "trip-backend",
            "region": "asia-south1"
          }
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ]
    }
  }
  